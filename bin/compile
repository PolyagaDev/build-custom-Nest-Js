#!/bin/bash

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}

echo "-----> Installing Node.js"
# Télécharger le script d'installation de Node.js
curl -fsSL https://deb.nodesource.com/setup_16.x | bash -

# Installer Node.js (inclut npm)
apt-get install -y nodejs

echo "-----> Installing application dependencies"
# Accéder au répertoire de l'application et installer les dépendances
cd $BUILD_DIR
npm install